@{
    @model StaticData
    ViewData["Title"] = "Details";
}

<style>

</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İdarə tablosuna bax</h4>
                <hr>
                <section class="wrapper" style="padding-bottom:50px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="artist-data pull-left">
                                <div class="artst-pic pull-left">
                                    <a title="Böyük ölçüdə bax" href="~/img/@Model.PhotoURL" target="_blank"> <img src="~/img/@Model.PhotoURL" class="img-fluid img-thumbnail" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bot-links">
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                        <i class="mdi mdi-cellphone"></i>
                                    </button>
                                    &nbsp; @Model.PhoneOne
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                        <i class="mdi mdi-cellphone"></i>
                                    </button> &nbsp; @Model.MobileTwo
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                        <i class="mdi mdi-cellphone"></i>
                                    </button> &nbsp; @Model.MobileThree
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                        <i class="mdi mdi-email"></i>
                                    </button> &nbsp; @Model.Email
                                </p>
                                <hr />

                                <button type="button" class="btn btn-social-icon btn-outline-sales">
                                   <i class="mdi mdi-link"></i> 
                                </button> &nbsp; @Model.FacebookLink
                                 <hr />
                                <button type="button" class="btn btn-social-icon btn-outline-sales">
                                    <i class="mdi mdi-link"></i> 
                                </button> &nbsp; @Model.InstagramLink
                                <hr />
                                <button type="button" class="btn btn-social-icon btn-outline-sales">
                                   <i class="mdi mdi-link"></i>
                                </button> &nbsp; @Model.LinkedinLink
                                <hr />
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <a class="btn btn-danger" asp-action="Generals">Əsas Səhifəyə qayıt</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

