@{
    @model StaticData
    ViewData["Title"] = "Delete";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-cellphone"></i>
                            </button>
                            &nbsp; @Model.PhoneOne
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-cellphone"></i>
                            </button> &nbsp; @Model.MobileTwo
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-cellphone"></i>
                            </button> &nbsp; @Model.MobileThree
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-email"></i>
                            </button> &nbsp; @Model.Email
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-link"></i>
                            </button> &nbsp; @Model.FacebookLink
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-link"></i>
                            </button> &nbsp; @Model.InstagramLink
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-link"></i>
                            </button> &nbsp; @Model.LinkedinLink
                        </p>
                        <hr />
                        <div class="alert alert-danger mt-4">
                            <p style="padding-top: 0;"><b>Silmək istədiyinizə əminsiniz ?</b></p>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                    </div>
                    <div class="col-md-6">
                        <form method="post" style="float: left;margin-right: 15px;">
                            <input type="submit" class="btn btn-danger btn-block btn-md" value="Sil" />
                        </form>
                        <a class="btn btn-danger btn-dark btn-md mr-2" style="float: left;" asp-action="Generals">Əsas Səhifəyə qayıt</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
