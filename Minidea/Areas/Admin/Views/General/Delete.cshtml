@{
    @model StaticData
    ViewData["Title"] = "Delete";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <img style="height: 400px" class="img-thumbnail" src="~/img/@Model.PhotoURL" />
                    </div>
                    <div class="col-12  col-md-6">
                        <p class="mt-3"> @Model.PhoneOne </p>
                        <hr />
                        <p class="mt-3">@Model.MobileTwo </p>
                        <hr />
                        <p class="mt-3">@Model.MobileThree </p>
                        <hr />
                        <p class="mt-3">@Model.Email </p>
                        <hr />
                        <p class="mt-3">@Model.FacebookLink </p>
                        <hr />
                        <p class="mt-3">@Model.InstagramLink </p>
                        <hr />
                        <p class="mt-3">@Model.LinkedinLink </p>
                        <hr />
                        <div class="alert alert-danger mt-4">
                            <p style="padding-top: 0;"><b>Silmək istədiyinizə əminsiniz ?</b></p>
                        </div>

                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                       
                    </div>
                    <div class="col-md-6">
                        <form method="post" style="float: left;margin-right: 15px;">
                            <input type="submit" class="btn btn-danger btn-block btn-md" value="Sil" />
                        </form>
                        <a class="btn btn-danger btn-block btn-md mr-2" style="float: left;" asp-action="Generals">Əsas Səhifəyə qayıt</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
