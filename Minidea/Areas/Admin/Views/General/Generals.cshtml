@{
    @model IEnumerable<StaticData>
    ViewData["Title"] = "Index";
}

<style>
    .dataTables_length, .dataTables_filter{
        display:none;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <h4 class="card-title text-center">
                        İdarə tablosu
                    </h4>
                    <p class="card-description">
                        <button type="button" class="btn btn-purple btn-icon-text" style="width:100%">
                            <a asp-action="create" asp-controller="general">
                                +   Əlavə et
                            </a>
                        </button>
                    </p>
                </div>
                <div class="col-md-12">
                    <div class="table-responsive">
                        <table id="main-table" class="table table-striped table-bordered" style="width:100%">
                            <thead>
                                <tr>
                                    <th style="display:none;"></th>
                                    <th>Nömrə 1</th>
                                    <th>Nömrə 2</th>
                                    <th>Nömrə 3</th>
                                    <th>E-poçt </th>
                                    <th>Əməliyyatlar</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.OrderByDescending(b => b.IsActive))
                                {
                                    <tr>
                                        <td style="display:none;">@item.Id</td>
                                        <td>@item.PhoneOne</td>
                                        <td>@item.MobileTwo</td>
                                        <td>@item.MobileThree</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a title="Sil" asp-action="delete" asp-route-id="@item.Id">
                                                <button type="button" class="btn btn-inverse-danger btn-icon">
                                                    <i class="mdi mdi-delete-forever"></i>
                                                </button>
                                            </a>
                                            <a title="Düzəliş et" asp-action="edit" asp-route-id="@item.Id">
                                                <button type="button" class="btn btn-inverse-warning  btn-icon">
                                                    <i class="mdi mdi-table-edit"></i>
                                                </button>
                                            </a>
                                            <a title="Ətraflı bax" asp-action="details" asp-route-id="@item.Id">
                                                <button type="button" class="btn btn-inverse-success btn-icon">
                                                    <i class="mdi mdi-information-variant"></i>
                                                </button>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
