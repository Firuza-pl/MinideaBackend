@{
    @model IEnumerable<BackgroundImages>
    ViewData["Title"] = "Index";
}
<style>
    .dataTables_length, .dataTables_filter{
        display:none;
    }
</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <div class="col-md-12">
                    <h4 class="card-title text-center">
                        Arxa Fon Şəkilləri
                    </h4>
                    <p class="card-description">
                        <button type="button" class="btn btn-purple btn-icon-text" style="width:100%">
                            <a asp-action="create" asp-controller="Home">
                                +   Əlavə et
                            </a>
                        </button>
                    </p>
                </div>
             <div  class="col-md-12">
                    <div class="table-responsive">
                    <table id="main-table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th style="display:none;"></th>
                                <th>Şəkil </th>
                                <th> Status </th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td style="display:none;">@item.Id</td>
                                    <td class="w-25">
                                       <a  title="Böyük ölçüdə baxmaq üçün click edin" href="~/img/@item.PhotoURL." target="_blank"> <img src="~/img/@item.PhotoURL" class="img-fluid img-thumbnail" /></a>
                                    </td>
                                    @if (item.IsActive == true)
                                    {
                                        <td class="text-center"><button type="button" class="btn btn-outline-success btn-icon-text"> Aktivdir </button></td>
                                    }
                                    else
                                    {
                                        <td class="text-center"><button type="button" class="btn btn-outline-danger btn-icon-text"> Aktiv deyil </button></td>
                                    }
                                    <td class="text-center">
                                        <a title="Sil" asp-action="delete" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-danger btn-icon">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </button>
                                        </a>
                                        <a title="Düzəliş et" asp-action="edit" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-warning  btn-icon">
                                                <i class="mdi mdi-table-edit"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
             </div>
            </div>
        </div>
    </div>
</div>
