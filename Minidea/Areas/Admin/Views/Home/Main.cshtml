@{
    @model IEnumerable<BackgroundImages>
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">
                    Arxa Fon Şəkilləri
                </h4>
                <p class="card-description">
                    <button type="button" class="btn btn-warning btn-icon-text">
                        <a asp-action="create" asp-controller="home">
                            Əlavə et
                        </a>
                    </button>
                </p>
                <div class="table-responsive">
                    <table id="main-table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th style="display:none;"></th>
                                <th>Şəkil </th>
                                <th> Status </th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr class="odd">
                                    <td style="display:none;">@item.Id</td>
                                    <td class="w-25">
                                        <img src="~/img/@item.PhotoURL" class="img-fluid img-thumbnail" />
                                    </td>
                                    @if (item.IsActive == true)
                                    {
                                        <td><button type="button" class="btn btn-outline-success btn-icon-text"> Aktivdir </button></td>
                                    }else{
                                        <td><button type="button" class="btn btn-outline-danger btn-icon-text"> Aktiv deyil </button></td>
                                    }
                                    <td>
                                        <a title="Sil" asp-action="delete" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-danger btn-icon">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </button> 
                                        </a> 
                                        <a title="Düzəliş et" asp-action="edit" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-warning  btn-icon">
                                                <i class="mdi mdi-table-edit"></i>
                                            </button>
                                        </a> 
                                        <a title="Ətraflı bax" asp-action="details" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-primary btn-icon">
                                                   <i class="mdi mdi-book-open-variant"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
