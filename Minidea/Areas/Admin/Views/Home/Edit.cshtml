@{
    @model BackgroundImages
    ViewData["Title"] = "Edit";
}

<style>
        .photo-convert img {
            width: 100%;
            height: 100%;
        }

</style>
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">İdarə tablosuna düzəliş et</h4>
                <hr>
                <form class="forms-sample" method="post" class="mt-4" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Photo">Brandin Şəklini seçin</label>
                                <div class="photo-convert">
                                    <img src="~/img/@Model.PhotoURL" class="img-fluid img-thumbnail">
                                    <div class="uploadImage custom-upload-image">
                                        <i class="fal fa-camera-alt"></i>
                                    </div>
                                </div>

                                <input id="uploadInput" asp-for="Photo" accept="image/*" class="form-control" />
                                <span asp-validation-for="Photo" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4" style="margin-top: 26px;">
                            <label for="exampleInputName1"></label>
                            <input type="submit" class="btn btn-warning btn-icon-text" value="Dəyiş" />
                            <button class="btn btn-dark"> <a asp-controller="home" asp-action="main"> Geri </a> </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>