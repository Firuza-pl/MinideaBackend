@{
    @model AdvertismentPhoto
    ViewData["Title"] = "Delete";
}

<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-6 col-md-8">
                        <img style="height: 400px" class="img-thumbnail" src="~/img/@Model.PhotoURL" />
                    </div>
                    <div class="col-md-4">
                        <div class="row">
                            <div class="col-md-12">
                                <h3>@Model.AreaTitle</h3>
                            </div>
                            <div class="col-md-12">
                                <div class="alert alert-danger mt-4">
                                    <p style="padding-top: 0;"><b>Silmək istədiyinizə əminsiniz ?</b></p>
                                </div>
                            </div>
                        </div>
                        <form method="post" style="float: left;margin-right: 15px;">

                            <input type="submit" class="btn btn-danger btn-block btn-md" value="Sil" />
                        </form>
                        <a class="btn btn-dark btn-block btn-md mr-2" style="float: left;" asp-action="edit" asp-route-id="@Model.AdvertismentPlaceId">Əsas Səhifəyə qayıt</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
