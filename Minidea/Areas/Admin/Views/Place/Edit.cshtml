@{
    @model IEnumerable<AdvertismentPhoto>
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
               <h4 class="card-title">
                   Məkan filialları
                </h4>
                <p class="card-description">
                    <button type="button" class="btn btn-purple btn-icon-text">
                        <a asp-action="Places" asp-controller="Place">
                       - Geri
                        </a>
                    </button>
                </p>
                <div class="table-responsive">
                    <table id="main-table" class="table table-striped table-bordered" style="width:100%">
                        <thead>
                            <tr>
                                <th style="display:none;"></th>
                                <th>Məkan adı (kicik başlıq)</th>
                                <th>Məkan sekili </th>
                                <th>Əməliyyatlar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderByDescending(b => b.IsMain==true))
                            {
                                <tr class="odd">
                                    <td style="display:none;">@item.Id</td>
                                    <td>@item.AreaTitle.</td>
                                    <td><img src="~/img/@item.PhotoURL" class="img-fluid img-thumbnail" /></td>
                                    <td>
                                        <a title="Sil" asp-action="delete" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-danger btn-icon">
                                                <i class="mdi mdi-delete-forever"></i>
                                            </button>
                                        </a>
                                        <a title="Düzəliş et" asp-action="editphotoline" asp-route-id="@item.Id">
                                            <button type="button" class="btn btn-inverse-warning  btn-icon">
                                                <i class="mdi mdi-table-edit"></i>
                                            </button>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
