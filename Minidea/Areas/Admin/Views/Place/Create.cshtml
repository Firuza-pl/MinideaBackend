@{
    @model PlacePhotoVIewModel
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Məkan filialI yarat</h4>
                <hr>
                <form class="forms-sample" method="post" class="mt-4" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AdvertismentPlaceId">Məkan adı seçin (böyük başlıq)</label>
                                <select asp-for="AdvertismentPlaceId" asp-items="@(new SelectList(ViewBag.Place,"Id","BigTitle"))" style="width:100%; padding: 10px;border: 1px solid #e4e9f0;">
                                    <option value="" hidden disabled selected>--Seçin--</option>
                                </select>
                                <span asp-validation-for="AdvertismentPlaceId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AreaTitle">Məkan adı (kiçik başlıq)</label>
                                <input asp-for="AreaTitle" class="form-control" id="exampleInputName1" placeholder="kiçik başlıq" />
                                <span asp-validation-for="AreaTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AllPhotos">Şəkili seçin</label>
                                <div class="uploadArea">
                                    <div class="uploadImage d-flex justify-content-center align-items-center">
                                    </div>
                                </div>
                                <input id="uploadInput" asp-for="AllPhotos" multiple accept="image/*" type="file" class="form-control uploadInput form-control" />
                                <span asp-validation-for="AllPhotos" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="exampleInputName1"></label>
                            <input type="submit" class="btn btn-purple btn-icon-text" value="Yarat" />
                            <button class="btn btn-dark"> <a asp-controller="Place" asp-action="Places"> Geri </a> </button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>