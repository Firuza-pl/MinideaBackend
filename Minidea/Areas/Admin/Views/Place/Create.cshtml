@{
    @model PlacePhotoVIewModel
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Məkanları yarat</h4>
                <hr>
                <form class="forms-sample" method="post" class="mt-4" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="BigTitle">Məkan adı (böyük başlıq)</label>
                                <input asp-for="BigTitle" class="form-control" id="exampleInputName1" placeholder="böyük başlıq" />
                                <span asp-validation-for="BigTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AreaTitle">Məkan adı (kiçik başlıq)</label>
                                <input asp-for="AreaTitle" class="form-control" id="exampleInputName1" placeholder="kiçik başlıq" />
                                <span asp-validation-for="AreaTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AllPhotos">Şəkil seçin</label>
                                <input id="customFile" asp-for="AllPhotos" accept="image/*" class="form-control file-upload-info custom-file-input" />
                                <span asp-validation-for="AllPhotos" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <label for="exampleInputName1"></label>
                            <input type="submit" class="btn btn-warning btn-icon-text" value="Yarat" />
                            <button class="btn btn-dark"> <a asp-controller="Place" asp-action="Places"> Geri </a> </button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>