@{
    @model Blogs
    ViewData["Title"] = "Delete";
}


<div class="page-container">
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12  col-md-6">
                        <img style="height: 400px" class="img-thumbnail" src="~/img/@Model.PhotoUrl" />
                    </div>
                    <div class="col-12  col-md-6">
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-clipboard-text"></i>
                            </button>
                            &nbsp; @Model.BigTitle
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-format-text"></i>
                            </button> &nbsp; @Model.SubTitle
                        </p>
                        <hr />
                        <p class="mt-3">
                            <button type="button" class="btn btn-social-icon btn-outline-sales">
                                <i class="mdi mdi-calendar-clock"></i>
                            </button> &nbsp; @Model.Date.ToShortDateString()
                        </p>
                        <hr />
                        <div class="alert alert-danger mt-4">
                            <p style="padding-top: 0;"><b>Silmək istədiyinizə əminsiniz ?</b></p>
                        </div>
                        <hr />

                        <form method="post" style="float: left;margin-right: 15px;">
                            <input type="submit" class="btn btn-danger btn-block btn-md" value="Sil" />
                        </form>
                        <a class="btn btn-danger btn-dark btn-md mr-2" style="float: left;" asp-action="Blogs">Əsas Səhifəyə qayıt</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
