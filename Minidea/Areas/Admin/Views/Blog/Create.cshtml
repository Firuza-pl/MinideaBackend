@{
    @model BlogCategoryVIewModel
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog yarat</h4>
                <hr>
                <form class="forms-sample" method="post" enctype="multipart/form-data">
                    <div class="row g-3">
                        <!-- Category Select -->
                        <div class="col-md-3">
                            <label for="CategoryId" class="form-label">Məkan adı seçin (böyük başlıq)</label>
                            <select class="form-control" id="CategoryId" name="CategoryId" required>
                                <option value="" hidden disabled selected>--Seçin--</option>
                                <option value="1">Drink</option>
                            </select>
                        </div>

                        <!-- Big Title -->
                        <div class="col-md-3">
                            <label for="BigTitle" class="form-label">Blog adı (böyük başlıq)</label>
                            <input type="text" class="form-control" name="BigTitle" maxlength="100" placeholder="böyük başlıq" required />
                        </div>

                        <!-- Sub Title -->
                        <div class="col-md-3">
                            <label for="SubTitle" class="form-label">Alt başlıq (kiçik başlıq)</label>
                            <input type="text" class="form-control" name="SubTitle" maxlength="100" placeholder="kiçik başlıq" required />
                        </div>

                        <!-- Image Upload -->
                        <div class="col-md-3">
                            <label for="Photo" class="form-label">Şəkili seçin</label>
                            <div class="uploadArea text-center">
                                <div class="uploadImage d-flex justify-content-center align-items-center">Drop image here</div>
                                <input type="file" class="form-control mt-2 uploadInput" accept="image/*" name="Photo" required />
                            </div>
                        </div>
                    </div>

                    <!-- Textarea -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <label for="Text" class="form-label">Mətn</label>
                            <textarea name="Text" id="my-editor" rows="6" class="form-control" placeholder="Mətn daxil edin..." required></textarea>
                        </div>
                    </div>

                    <!-- Submit -->
                    <div class="row mt-4">
                        <div class="col-md-4 d-flex gap-2">
                            <input type="submit" class="btn btn-purple" value="Yarat" />
                            <a href="/Admin/Blog/Blogs" class="btn btn-dark">Geri</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>