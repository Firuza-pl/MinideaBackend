@{
    @model BlogCategoryVIewModel
    ViewData["Title"] = "Details";
}

<style>

</style>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Blog/Kateqoriya</h4>
                <hr>
                <section class="wrapper" style="padding-bottom:50px;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="artist-data pull-left">
                                <div class="artst-pic pull-left">
                                    <a title="Böyük ölçüdə bax" href="~/img/@Model.PhotoURL" target="_blank"> <img src="~/img/@Model.PhotoURL" class="img-fluid img-thumbnail" /></a>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="bot-links">
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                          <i class="mdi mdi-clipboard-text"></i>
                                    </button>
                                    &nbsp; @Model.BigTitle
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                         <i class="mdi mdi-format-text"></i>
                                    </button> &nbsp; @Model.SubTitle
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                        <i class="mdi mdi-format-list-bulleted"></i>
                                    </button> &nbsp; @Model.CategoryName
                                </p>
                                <hr />
                                <p class="mt-3">
                                    <button type="button" class="btn btn-social-icon btn-outline-sales">
                                      <i class="mdi mdi-calendar-clock"></i>
                                    </button> &nbsp; @Model.Date.ToShortTimeString()
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <p class="mt-3">
                             &nbsp; @Html.Raw(Model.Text)
                            </p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <a class="btn btn-dark" asp-action="Blogs">Əsas Səhifəyə qayıt</a>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
</div>

